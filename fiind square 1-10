public class Task3{
    public static void main(String[]args){
               int total = 0;

        // Display 1 to 10(int and square)
        System.out.println("Integer Square");
        for (int i = 1; i <= 10; i++) {
            int square = i * i; // Calc utk square
            System.out.println(i + "        " + square);
            total += square; // Add the square to the sum
        }

        // Display the sum of squares
        System.out.println("\ntotal square from 1 to 10: " + total);
    }
}
